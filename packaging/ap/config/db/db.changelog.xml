  <changeSet author="harmony" id="2.0.0-init">
    <preConditions onFail="MARK_RAN" onError="HALT">
      <not>
        <changeSetExecuted id="0001:001" author="root" changeLogFile="/opt/harmony-ap/db/migrations/0001-init.sql"/>
