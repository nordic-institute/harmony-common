#!/bin/bash

set -e
set -x

. /usr/share/debconf/confmodule

if [[ "$1" == "remove" ]]; then
  rm -rf /opt/harmony-smp
elif [[ "$1" == "purge" ]]; then
  db_purge
  rm -rf /etc/harmony-smp
elif [[ "$1" == "abort-install" ]]; then
  rm -rf /etc/harmony-smp
  rm -rf /opt/harmony-smp
fi

db_stop

exit 0
